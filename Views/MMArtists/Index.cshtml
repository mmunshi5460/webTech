@model IEnumerable<MMClubs.Models.Artist>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArtistId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimumHourlyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameAddress.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <p> @TempData["Message"] </p>
    <tbody>
        @foreach (var item in Model.OrderBy(m => m.NameAddress.FullName))
        {
            <tr>
                <td>
                    <a asp-action="Index" asp-controller="MMGroupMembers" asp-route-ArtistId="@item.ArtistId">@item.ArtistId</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimumHourlyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameAddress.NameAddressId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameAddress.FullName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ArtistId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ArtistId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ArtistId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
